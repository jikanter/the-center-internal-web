<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Registrant</th>
      <th>Conference</th>
      <th>Po</th>
      <th>Organization</th>
      <th>Invoice number</th>
      <th>Date</th>
      <th>Service provided</th>
      <th>Period billed</th>
      <th>Lineitem</th>
      <th>Accounting code</th>
      <th>Department</th>
      <th>Accounts payable organization</th>
      <th>Terms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.registrant_id %></td>
        <td><%= invoice.conference_id %></td>
        <td><%= invoice.po_id %></td>
        <td><%= invoice.organization_id %></td>
        <td><%= invoice.invoice_number %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.service_provided %></td>
        <td><%= invoice.period_billed %></td>
        <td><%= invoice.lineitem_id %></td>
        <td><%= invoice.accounting_code %></td>
        <td><%= invoice.department_id %></td>
        <td><%= invoice.accounts_payable_organization_id %></td>
        <td><%= invoice.terms %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

